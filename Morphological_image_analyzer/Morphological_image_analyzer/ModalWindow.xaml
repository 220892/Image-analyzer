<Window x:Class="Morphological_image_analyzer.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Morphological_image_analyzer"
        mc:Ignorable="d"
        Title="Zarządzanie elementem strukturalnym" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="kernelSize" PreviewTextInput="numberValidationTextBox" HorizontalAlignment="Left" Margin="385,10,0,0" VerticalAlignment="Top" Width="30" Height="20"/>
        <Button x:Name="setKernelSize" Content="Ustaw rozmiar" HorizontalAlignment="Left" Margin="185,10,0,0" VerticalAlignment="Top" Width="100" Height="20" Click="setKernelSize_Click"/>
        <Button x:Name="confirmKernelMatrix" Content="Zatwierdź macierz" HorizontalAlignment="Left" Margin="515,10,0,0" VerticalAlignment="Top" Width="100" Height="20" Click="confirmKernelMatrix_Click"/>
        <StackPanel x:Name="stackPanel" Margin="0,40,0,0"/>
    </Grid>
</Window>
